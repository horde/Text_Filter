{
    "minimum-stability": "dev",
    "name": "horde/text_filter",
    "description": "Text filtering and conversion library",
    "type": "library",
    "homepage": "https://www.horde.org/libraries/Horde_Text_Filter",
    "license": "LGPL-2.1-only",
    "authors": [
        {
            "name": "Jan Schneider",
            "email": "jan@horde.org",
            "role": "lead"
        },
        {
            "name": "Chuck Hagenbuch",
            "email": "chuck@horde.org",
            "role": "lead"
        },
        {
            "name": "Michael Slusarz",
            "email": "slusarz@horde.org",
            "role": "developer"
        }
    ],
    "time": "2022-11-04",
    "repositories": [
        {
            "type": "composer",
            "url": "https://horde-satis.maintaina.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "horde/exception": "^3 || dev-FRAMEWORK_6_0",
        "horde/idna": "^2 || dev-FRAMEWORK_6_0",
        "horde/util": "^3 || dev-FRAMEWORK_6_0",
        "horde/secret": "^3 || dev-FRAMEWORK_6_0"
    },
    "require-dev": {
        "horde/text_filter_jsmin": "^2 || dev-FRAMEWORK_6_0",
        "horde/text_flowed": "^3 || dev-FRAMEWORK_6_0",
        "horde/translation": "^3 || dev-FRAMEWORK_6_0",
        "horde/test": "^3 || dev-FRAMEWORK_6_0",
        "horde/util": "^3 || dev-FRAMEWORK_6_0"
    },
    "suggest": {
        "horde/text_filter_jsmin": "^2 || dev-FRAMEWORK_6_0",
        "horde/text_flowed": "^3 || dev-FRAMEWORK_6_0",
        "horde/translation": "^3 || dev-FRAMEWORK_6_0",
        "ext-tidy": "*"
    },
    "autoload": {
        "psr-0": {
            "Horde_Text_Filter": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Horde\\Text\\Filter\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "horde/horde-installer-plugin": true
        }
    }
}